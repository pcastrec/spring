{
  "name": "Spring Boot",
  "dockerComposeFile": "docker-compose.yml",
  "service": "application",
  "workspaceFolder": "/workspace",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot",
        "vscjava.vscode-spring-initializr",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg"
      ]
    }
  },
  
  "postCreateCommand": "if [ -f mvnw ]; then chmod +x mvnw && ./mvnw dependency:resolve; fi",
  "remoteUser": "vscode"
}